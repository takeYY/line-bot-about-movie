  body
    div.container
      form(id='form', class='form mt-3')
        div.form-group
          label(for='select-dist') 検索範囲
          select(name='dist', class='form-control', id='select-dist')
            - for (var x = 1; x <= 20; x++)
              option #{x}km
        input(type='submit', class='btn btn-lg btn-primary w-100', value='検索')
